#include <stdio.h

int solution(int number) {
  
  int soma=0;
  
  for (int i = 0; i <= number; i++)
    {
	if (3 % number ==0 || 5 % number == 0){
	return  soma += i;
	}else  if (number < 0){
		return 0;
      }else if ( number % 3 ==0 && number % 5 ==0 ){  
        return soma +=i;
      } 
    }
}
